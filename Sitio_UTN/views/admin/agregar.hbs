<div class="container" style="margin: 100px auto;"></div>
        <div class="row">
            <div class="col-6 offset-3">
                <h4>Agregar novedades</h4>
                <form class="row" action="/admin/novedades/agregar" method="post">
                    <div class="form-group">
                        <input type="text" class="form-control" name="titulo" placeholder="Titulo">
                     </div>
                    <div class="form-group">
                        <textarea class="form-control" name="subtitulo" placeholder="Subtitulo"></textarea>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="texto" placeholder="Texto"></textarea>
                    </div>
                    <button type="submit" class="btn btn-dark buttonform">Guardar</button>

                </form>
                {{#if error}}
                    <p>{{message}}</p>
                {{/if}}
            </div>
        </div>
    </div>