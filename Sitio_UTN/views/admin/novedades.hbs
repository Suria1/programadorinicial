<body>
    <div class="row">
        <div class="col">
            <table class="table ">

                <thead>

                    <tr class="table-dark">
                        <th scope="col">Id</th>
                        <th scope="col">Titulo</th>
                        <th scope="col">Subtitulo</th>
                        <th scope="col">Texto</th>
                        <th scope="col" class="text-right">Acciones</th>

                    </tr>

                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td>{{subtitulo}}</td>
                        <td>{{texto}}</td>
                        <td class="text-right">
                            {{Acciones}}
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary"><i class="fa-solid fa-pencil"></i></a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary"><i class="fas fa-trash"></i></a>
                        </td>

                    </tr>
                    {{/each}}


                </tbody>
            </table>
        </div>
    </div>

</body>